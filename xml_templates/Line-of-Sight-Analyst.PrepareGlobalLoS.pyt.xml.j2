{% extends "tool-template.j2" %}
{% block tools %}
	<tool name="PrepareGlobalLoS" displayname="Creation of Global Line of Sight" toolboxalias="losAnalyst" xmlns="">
		<parameters>
			<param name="in_surface" displayname="Surface" type="Required" direction="Input" datatype="Raster Layer" expression="in_surface">
				<dialogReference>&lt;DIV STYLE="text-align:Left;"&gt;&lt;P&gt;&lt;SPAN&gt;Surface from which lines of sights are extracted.&lt;/SPAN&gt;&lt;/P&gt;&lt;/DIV&gt;</dialogReference>
			</param>
			<param name="in_observers" displayname="Observer points" type="Required" direction="Input" datatype="Feature Layer" expression="in_observers">
				<dialogReference>&lt;DIV STYLE="text-align:Left;"&gt;&lt;DIV&gt;&lt;P&gt;&lt;SPAN&gt;Points where the observers are located.&lt;/SPAN&gt;&lt;/P&gt;&lt;/DIV&gt;&lt;/DIV&gt;</dialogReference>
			</param>
			<param name="in_observer_offset" displayname="Observer points offset" type="Required" direction="Input" datatype="Field" expression="in_observer_offset">
				<dialogReference>&lt;DIV STYLE="text-align:Left;"&gt;&lt;DIV&gt;&lt;P&gt;&lt;SPAN&gt;Vertical offset of observers from the surface. Specified as field, as each observer point can have different offset.&lt;/SPAN&gt;&lt;/P&gt;&lt;/DIV&gt;&lt;/DIV&gt;</dialogReference>
			</param>
			<param name="in_targets" displayname="Target points" type="Required" direction="Input" datatype="Feature Layer" expression="in_targets">
				<dialogReference>&lt;DIV STYLE="text-align:Left;"&gt;&lt;P&gt;&lt;SPAN&gt;Points at which the observers are looking.&lt;/SPAN&gt;&lt;/P&gt;&lt;/DIV&gt;</dialogReference>
			</param>
			<param name="in_target_offset" displayname="Target points offset" type="Required" direction="Input" datatype="Field" expression="in_target_offset">
				<dialogReference>&lt;DIV STYLE="text-align:Left;"&gt;&lt;DIV&gt;&lt;P&gt;&lt;SPAN&gt;Vertical offset of the target from the surface. Specified as field, as each target point can have different offset.&lt;/SPAN&gt;&lt;/P&gt;&lt;/DIV&gt;&lt;/DIV&gt;</dialogReference>
			</param>
			<param name="in_sampling_distance" displayname="Sampling distance" type="Required" direction="Input" datatype="Double" expression="in_sampling_distance">
				<dialogReference>&lt;DIV STYLE="text-align:Left;"&gt;&lt;DIV&gt;&lt;P&gt;&lt;SPAN&gt;Distance specifying how often are points on the line of sight placed. Smaller number leads to more precise results but prolongs both creation of lines of sight as well as further analyses.&lt;/SPAN&gt;&lt;/P&gt;&lt;/DIV&gt;&lt;/DIV&gt;</dialogReference>
			</param>
			<param name="in_output_layer" displayname="Output feature layer" type="Required" direction="Output" datatype="Feature Layer" expression="in_output_layer">
				<dialogReference>&lt;DIV STYLE="text-align:Left;"&gt;&lt;P&gt;&lt;SPAN&gt;Resulting vector layer containg lines of sight between all observers and targets. If there are "N" observers and "M" target points then there will be "N x M" lines of sight.&lt;/SPAN&gt;&lt;/P&gt;&lt;/DIV&gt;</dialogReference>
			</param>
		</parameters>
		<summary>&lt;DIV STYLE="text-align:Left;"&gt;&lt;P STYLE="font-size:16ptmargin:0 0 0 0;"&gt;&lt;SPAN&gt;Tool for creation of Line of Sight &lt;/SPAN&gt;&lt;SPAN&gt;from observer points through the target points to the edge of surface data. This type of Line of Sight allows comparison of target points to global horizons that exist in Lines of Sight.&lt;/SPAN&gt;&lt;/P&gt;&lt;DIV&gt;&lt;P&gt;&lt;SPAN /&gt;&lt;/P&gt;&lt;/DIV&gt;&lt;/DIV&gt;</summary>
	</tool>
{% endblock %}	
{% block dataInfo %}
		<idCitation>
			<resTitle>Creation of Global Line of Sight</resTitle>
		</idCitation>
		<idAbs>&lt;DIV STYLE="text-align:Left;"&gt;&lt;P STYLE="font-size:16ptmargin:0 0 0 0;"&gt;&lt;SPAN&gt;Tool for creation of Line of Sight &lt;/SPAN&gt;&lt;SPAN&gt;from observer points through the target points to the edge of surface data. This type of Line of Sight allows comparison of target points to global horizons that exist in Lines of Sight.&lt;/SPAN&gt;&lt;/P&gt;&lt;DIV&gt;&lt;P&gt;&lt;SPAN /&gt;&lt;/P&gt;&lt;/DIV&gt;&lt;/DIV&gt;</idAbs>
{% endblock %}